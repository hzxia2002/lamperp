<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.justonetech.system.domain">
	<class
		name="SysRole"
		table="SYS_ROLE"
	>
		
		<meta attribute="sync-DAO">false</meta>
		<meta attribute="sync-jsp">true</meta>
		<meta attribute="sync-boolean">get</meta>
		<meta attribute="treeable">false</meta>
		<meta attribute="projectable">false</meta>
        <meta attribute="tableName">角色管理</meta>
        <meta attribute="tableComment">角色
角色表中要创建以下角色：
工地一般用户、工地管理员、集团用户、监管用户，用于控制不同的用户进行访问权限的授权</meta>
	    <meta attribute="sync-templatePatterns">list\w*</meta>
        <meta attribute="sub-system">system</meta>

		<id
			name="id"
			type="java.lang.Long"
			column="ID"
		>
			<generator class="com.justonetech.core.orm.hibernate.LongIdGenerator"/>
		</id>

		<property
			name="code"
			column="CODE"
			type="string"
			not-null="false"
			length="50"
        >
            <meta attribute="ColumnName">角色编码</meta>
            <meta attribute="ColumnComment">角色编码</meta>
        </property>

		<property
			name="roleName"
			column="ROLE_NAME"
			type="string"
			not-null="false"
			length="50"
        >
            <meta attribute="ColumnName">角色名称</meta>
            <meta attribute="ColumnComment">角色名称</meta>
        </property>

		<property
			name="description"
			column="DESCRIPTION"
			type="string"
			not-null="false"
			length="100"
        >
            <meta attribute="ColumnName">描述</meta>
            <meta attribute="ColumnComment">项目标识</meta>
        </property>

		<property
			name="createTime"
			column="CREATE_TIME"
			type="timestamp"
			not-null="false"
			length="7"
        >
            <meta attribute="ColumnName">创建时间</meta>
            <meta attribute="ColumnComment">创建时间</meta>
        </property>

		<property
			name="updateTime"
			column="UPDATE_TIME"
			type="timestamp"
			not-null="false"
			length="7"
        >
            <meta attribute="ColumnName">更新时间</meta>
            <meta attribute="ColumnComment">更新时间</meta>
        </property>

		<property
			name="createUser"
			column="CREATE_USER"
			type="string"
			not-null="false"
			length="100"
        >
            <meta attribute="ColumnName">创建人</meta>
            <meta attribute="ColumnComment">创建人(记录帐号）</meta>
        </property>

		<property
			name="updateUser"
			column="UPDATE_USER"
			type="string"
			not-null="false"
			length="100"
        >
            <meta attribute="ColumnName">更新人</meta>
            <meta attribute="ColumnComment">更新人(记录帐号）</meta>
        </property>

	
<!--

		<set name="sysUserRoles" inverse="true">
			<key column="ROLE_ID"/>
			<one-to-many class="SysUserRole"/>
		</set>

-->

		<set name="sysRolePrivileges" inverse="true">
			<key column="ROLE_ID"/>
			<one-to-many class="SysRolePrivilege"/>
		</set>

	</class>	
    <query name="sysrole_all_data_query">
        <![CDATA[FROM SysRole]]>
    </query>
</hibernate-mapping>